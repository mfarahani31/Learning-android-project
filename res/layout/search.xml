<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText
            android:id="@+id/editTextDialogUserInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button" android:layout_alignParentLeft="true">

        <requestFocus />

    </EditText>
    <Button style="?android:attr/buttonStyleSmall" android:textColor="@android:color/black"
            android:background="@android:color/holo_blue_bright" android:layout_width="120dp"
            android:layout_height="wrap_content" android:textStyle="bold" android:text="جستجو" android:id="@+id/button"
            android:layout_alignParentTop="true" android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView" android:layout_below="@+id/editTextDialogUserInput"
            android:layout_alignParentLeft="true"/>
</RelativeLayout>